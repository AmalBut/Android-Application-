<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_pizzaItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/favLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPizza"
            android:layout_width="185dp"
            android:layout_height="152dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/bbq" />

        <ImageButton
            android:id="@+id/imgFav"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#E7E2E2"
            app:srcCompat="@drawable/ic_favorite_border" />

        <Space
            android:id="@+id/space_pizzaItem"
            android:layout_width="50dp"
            android:layout_height="84dp"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="381dp"
            tools:layout_editor_absoluteY="621dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pizzaInfoLayout"
        android:layout_width="257dp"
        android:layout_height="83dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pizzaType"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:text="Pizza Name"
            android:textColor="#000000"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/size"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:text="Size"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pizzaPrice"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:text="Price"
            android:textColor="#000000" />

    </LinearLayout>

    <Button
        android:id="@+id/button_reserve"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:text="Order"
        android:textColor="@color/white"
        android:backgroundTint="#FA601A"
        android:textSize="10sp" />


</LinearLayout>
